# Standardized MongoDB (читаем стандартизированные товары)
STANDARDIZED_MONGO_HOST=localhost
STANDARDIZED_MONGO_PORT=27017
STANDARDIZED_MONGO_USER=
STANDARDIZED_MONGO_PASS=
STANDARDIZED_MONGO_AUTHSOURCE=
STANDARDIZED_MONGO_AUTHMECHANISM=SCRAM-SHA-256
STANDARDIZED_MONGO_DIRECT_CONNECTION=false
STANDARDIZED_MONGODB_DATABASE=standardized_products
STANDARDIZED_COLLECTION_NAME=standardized_products

# Source MongoDB (для получения данных о поставщиках)
SOURCE_MONGO_HOST=localhost
SOURCE_MONGO_PORT=27017
SOURCE_MONGO_USER=
SOURCE_MONGO_PASS=
SOURCE_MONGO_AUTHSOURCE=
SOURCE_MONGO_AUTHMECHANISM=SCRAM-SHA-256
SOURCE_MONGO_DIRECT_CONNECTION=false
SOURCE_MONGODB_DATABASE=source_products

# Unique Products MongoDB (наша БД для дедуплицированных товаров)
UNIQUE_MONGO_HOST=localhost
UNIQUE_MONGO_PORT=27017
UNIQUE_MONGO_USER=
UNIQUE_MONGO_PASS=
UNIQUE_MONGO_AUTHSOURCE=
UNIQUE_MONGO_AUTHMECHANISM=SCRAM-SHA-256
UNIQUE_MONGO_DIRECT_CONNECTION=false
UNIQUE_MONGODB_DATABASE=unique_products
UNIQUE_COLLECTION_NAME=unique_products

# Redis
REDIS_URL=redis://localhost:6379

# Processing settings
DEDUPLICATION_BATCH_SIZE=1000
WORKER_DELAY=5  # Задержка между батчами в секундах

# API Security
API_KEY=your_secure_api_key_here

# Service settings
SERVICE_NAME=deduplication_service
SERVICE_PORT=8001  # Другой порт, чтобы не конфликтовать со стандартизацией